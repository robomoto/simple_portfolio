<% include partials/header %>
<% include partials/nav %>

<form action="/projects" method="POST">
    <label>Content Type:
      <select name="Project[category]">
         <option value="project">Project</option>
         <option value="misc">Misc</option>
         <option value="blog">Blog</option>
      </select>
    </label>
    <label>Display: <select name="Project[display]">
        <option value="private">Private</option>
        <option value="public">Public</option>
    </select></label>
    <label>Publish: <select name="Project[isPublished]">
        <option value="false">Unpublished</option>
        <option value="true">Published</option>
    </select> <br></label>
    <label>Project Name:<br> <input type="text" name="Project[name]"><br> </label>
    <label>Source Link:<br> <input type="text" name="Project[link]"><br></label>
    <label>Short Description:<br> <input type="text" name="Project[shortDesc]"><br></label>
    <label>Description:<br> <textarea name="Project[description]"></textarea><br></label>
    <label>Tags:<br> <input type="text" name="Project[tags]"><br></label>
    <input type="submit" name="submit" value="submit">
</form>
    
<% include partials/footer %>